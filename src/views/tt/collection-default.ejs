<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no"/>
    <title>发现</title>
    <link href="../web/css/style.css" rel="stylesheet">
    <script src="../../../web/js/jquery-1.7.2.min.js"></script>
    <script src="../../../web/js/jquery.lazyload.js"></script>
    <script type="text/javascript">
        window.__app = <%-JSON.stringify(__app)%>;
        window.__page = <%-JSON.stringify(__page)%>;
        $(function(){
            $("img.activity-cover-img").lazyload({ threshold : 200 ,effect:"fadeIn"});
        });
    </script>
</head>
<body>
<div id="wary" >
    <div class="clear">&nbsp</div>
    <div class="recomm_wary">
        <%
        for(var i=0;i<list.length;i++){
            var lists = list[i];
        %>
        <div class="screen recommended">
            <a href="/tt/<%=lists._id%>"><img src="/public/images/zw.jpg" data-original="<%=lists.coverPics[0]%>"  class="img1 border_radius activity-cover-img" /></a>
            <div class="scr">
                <div class="scr_left">
                    <p class="p1"><%=lists.name%></p>
                    <!--<p class="p2"><%=lists.promotionWords.substring(0,16)%></p>-->
                    <p class="p2">
                        <%
                            var poromot = lists.promotionWords;
                            var poromotionStr = poromot.substring(0,16);
                            if(poromot!=poromotionStr){
                                poromotionStr =poromotionStr+"...";
                            }
                        %>
                        <%=poromotionStr%>
                    </p>
                </div>
                <div class="scr_right">
                    <%
                        if(likes.id){
                        var likesObj = likes.meta.likes[lists._id];
                        if(likesObj){
                        %>
                        <p class="p1"><img src="/public/images/3_06_h.png" /> <span><%=lists.meta['likes']%></span></p>
                        <%
                            }else{
                        %>
                                <p class="p1"><img src="/public/images/3_03.png" /> <span><%=lists.meta['likes']%></span></p>
                        <%
                            }}else{
                        %>
                             <p class="p1"><img src="/public/images/3_03.png" /> <span><%=lists.meta['likes']%></span></p>
                        <%
                            }
                        %>

                </div>
            </div>
            <div class="shadow border_radius_shadow"></div>
        </div>
        <%}%>
        <!--关注 -->
        <div class="xcgyimg xcgy_gz setwzcss border_radius" id="focus_on"><a href="http://mp.weixin.qq.com/s?__biz=MzA3MjIwNTk4Mg==&mid=203179604&idx=1&sn=6a18b351c8685f70b988ad2097ce182d#rd" > <img src="/public/images/3_10.png" class="border_radius" /></a></div>
        <!--导航 -->
        <div class="home_gy">
            <img src="/public/images/home.png" class="border_radius img_home"/>
            <a href="/index#activity/index"><img src="/public/images/home_nav1.png" class="home_nav"/></a>
            <a href="/tt/collection-default"><img src="/public/images/home_nav2.png" class="home_nav"/></a>
            <a href="/index#mine/index"><img src="/public/images/home_nav3.png" class="home_nav"/></a>
            <img src="/public/images/home_close.png" class="home_close"/>
        </div>
        <script type="text/javascript">
            $(function(){
                $(document).click(function () {
                    $(".home_gy").removeClass("home_gy_set");
                    $(".home_gy").addClass("home_gy_set1");
                });
                $(".img_home").click(function (event) {
                    $(".home_gy").removeClass("home_gy_set1");
                    $(".home_gy").addClass("home_gy_set");
                    event.stopPropagation();
                });
            });
        </script>
    </div>
</div>